 <!-- Trigger/Open The Modal -->
<button id="myBtn" class="btn-gradient-primary btn-rounded btn-fw">Contact Us</button>

<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <p><strong>Send Us a message</strong></p>
        <form class="contact-form">

            <div class="form-group row">
                <label for="Email" class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" id="Email" placeholder="Email">
                </div>
            </div>

            <div class="form-group row">
                <label for="Username" class="col-sm-3 col-form-label">Username (optional)</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="Username" placeholder="Username">
                </div>
            </div>

            <div class="form-group row">
                <label for="Message" class="col-sm-3 col-form-label">Message</label>
                <div class="col-sm-9">
                    <textarea class="form-control" id="Message" name="Message" rows="5" placeholder="Your message...">
      
      </textarea>
                    <!-- <input type="text" class="form-control" id="Message" placeholder="Your message..."> -->
                </div>
            </div>

            <button type="submit" class="btn-gradient-primary btn-rounded btn-fw">Submit</button>
            <button class="btn btn-light">Cancel</button>
        </form>
    </div>

</div>


